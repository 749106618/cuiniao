page {
  background: rgba(250, 250, 250, 1);
}

.textarea {
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
}

.main {
  border-radius: 16rpx;
  width: 670rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
  margin: 40rpx 40rpx 0 40rpx;
  border-radius: 16rpx;
  padding: 40rpx;
}

.main .bottom {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  background-color: #fff;
}

.main .bottom .left {
  width: 100rpx;
  height: 100rpx;
  background-color: green;
}

.main .bottom .right {
  width: 44rpx;
  height: 36rpx;
}

button {
  width: 670rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 80rpx 40rpx 166rpx 40rpx;
  opacity: 0.5;
  background: linear-gradient(90deg, rgba(255, 128, 128, 1) 0%, rgba(255, 36, 66, 1) 100%);
}