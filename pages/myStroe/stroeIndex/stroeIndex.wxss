page {
  background: rgba(250, 250, 250, 1);
}

.head {
  width: 670rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 40rpx;
  margin: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.head image {
  width: 32rpx;
  height: 28rpx;
}

.head view {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  margin-left: 22rpx;
}

.card {
  border-radius: 20rpx;
  box-shadow: 0px 6px 28px 0px rgba(0, 0, 0, 0.05);
  margin: 0 40rpx 40rpx 40rpx;
  background-color: #fff;
}

.card .item {
  width: 670rpx;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.card .item .left {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.card .item .right {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  display: flex;
  align-items: center;
}

.card .item .right .jt {
  width: 16rpx;
  height: 28rpx;
  margin-left: 20rpx;
}

.card .item .right .img {
  width: 80rpx;
  height: 72rpx;
  margin-left: 20rpx;
  background-color: green;
}

.card .item .right .time {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 94, 15, 1);
}

.card .item .right .txt {
  margin-left: 20rpx;
}