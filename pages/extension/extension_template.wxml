      </view>
    </view>
  </view>
  <view class="list">
    <image src="../../images/pic.jpg" bindtap="chooseWxImage"></image>
    <image src="../../images/pic.jpg" bindtap="chooseWxImage"></image>
    <image src="../../images/pic.jpg" bindtap="chooseWxImage"></image>
    <image src="../../images/pic.jpg" bindtap="chooseWxImage"></image>
  </view>
  <view class="about">
    <text class="title">关于我们</text>
    <textarea class="text ft24" style="height:322rpx;text-align: left;color:#fff;" data-type="content4" bindinput="inputHandler"></textarea>
  </view>
</view>
<view class="fixed-bottom">
  <view class="pic">
    <image src="../../images/preview.png"></image>
    <text>预览</text>
  </view>
  <view class="pic">
    <image src="../../images/download.png"></image>
    <text>保存</text>
  </view>
  <view class="next" bindtap="next">下一步</view>
</view>