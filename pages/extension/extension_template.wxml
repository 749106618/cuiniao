<view class="container">
  <view class="background">
    <view class="content">
      <view class="logo">
        <image src="../../images/logo.jpg" bindtap="chooseWxImage"></image>
        <input style="width:402rpx;height:36rpx;" data-type="content0" bindinput="inputHandler"></input>
      </view>
      <view class="content-text">
        <input class="date" data-type="content1" bindinput="inputHandler"></input>
        <textarea class="text ft36" style="height:104rpx;color:#fff;" data-type="content2" bindinput="inputHandler"></textarea>
        <textarea class="text ft24" style="height:114rpx;color:#fff;" data-type="content3" bindinput="inputHandler"></textarea>
      </view>
      <view class="qrcode">
        <image src="../../images/logo.jpg" bindtap="chooseWxImage"></image>
