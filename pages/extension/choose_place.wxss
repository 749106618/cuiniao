page {
  background: #fff;
  height: 100%;
}

.top {
  margin-bottom: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address {
  display: flex;
  align-items: center;
}

.address image {
  margin-right: 16rpx;
}

.place {
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.top image {
  width: 20rpx;
  height: 28rpx;
}

.address text {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

image {
  width: 44rpx;
  height: 44rpx;
}

/*列表*/

.convencibox-item {
  height: 72rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 62rpx;
  background: #fff;
}

.convencibox-item-bot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.item-address {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 10rpx;
}

.tips {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 500;
  background: rgba(255, 36, 66, 1);
  padding: 4rpx 8rpx;
  color: #fff;
  border-radius: 4rpx;
  margin-left: 18rpx;
}

.convencibox-item-bot-icon {
  width: 44rpx;
  height: 44rpx;
}

.convencibox-item-bot-icon1 {
  width: 44rpx;
  height: 44rpx;
}

.convencibox-item-bot-info {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.flex{
  display: flex;
  align-items: center;
}
.distance {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.convencibox-item-bot-name {
  font-size: 28rpx;
  color: #333;
}

.submit {
  width: 240rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(90deg, rgba(255, 128, 128, 1) 0%, rgba(255, 36, 66, 1) 100%);
  box-shadow: 0rpx 2rpx 16rpx 0rpx rgba(255, 96, 121, 0.4);
  border-radius: 36rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

.convenci-bot-right {
  display: flex;
  align-items: center;
  justify-content: center;
}

.convenci-bot image {
  margin-right: 20rpx;
}

.convenci-bot {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 5;
  background: #fff;
  font-size: 28rpx;
}

.bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}
