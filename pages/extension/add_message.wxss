/* pages/put/add_put.wxss */

.content {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
}

.label {
  height: 140rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  color: #333;
}

.label image {
  width: 16rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.ipt {
  text-align: right;
}

.placeholderStyle {
  color: rgba(187, 187, 187, 1);
}

.pay {
  width: 670rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 60rpx;
  margin-bottom: 28rpx;
  background: linear-gradient(90deg, rgba(255, 128, 128, 1) 0%, rgba(255, 36, 66, 1) 100%);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
}

.tip {
  text-align: center;
  color: #333;
  font-size: 24rpx;
  font-weight: 400;
}

.theme {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.theme .label {
  height: 128rpx;
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.theme .placeholderStyle {
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(187, 187, 187, 1);
}
