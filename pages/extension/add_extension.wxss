/* pages/extension/add_ extension.wxss */

page {
  background-color: #fff;
}

.tips {
  margin-bottom: 40rpx;
  width: 670rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(246, 232, 194, 1);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}

.tips text {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.tips image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}

.content {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.content .classify {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}


.imgs image {
  width: 324rpx;
  height: 432rpx;
  margin-bottom: 40rpx;
}

.imgs .text {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 80rpx;
  text-align: center;
}
