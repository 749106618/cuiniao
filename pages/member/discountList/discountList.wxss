page {
  background: rgba(250, 250, 250, 1);
}

.discount {
  width: 670rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  margin: 40rpx 40rpx 0 40rpx;
  padding-bottom: 40rpx;
}

.discount-top {
  position: relative;
  padding-left: 132rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 40rpx;
  padding-bottom: 38rpx;
  padding-right: 40rpx;
  align-items: center;
}

.discount-top .icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(67, 137, 68, 1);
  border-radius: 40rpx;
  position: absolute;
  left: 40rpx;
  top: 40rpx;
}

.discount-top .left {
  margin-left: 12rpx;
}

.discount-top .left .date {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.discount-top .left .fbdate {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 20rpx;
}

.discount-top .right {
  display: flex;
}

.discount-top .right .btn {
  width: 132rpx;
  height: 52rpx;
  border-radius: 26rpx;
  border: 1rpx solid rgba(153, 153, 153, 1);
  text-align: center;
  line-height: 52rpx;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.line {
  margin: 0 40rpx;
  border-bottom: 2rpx dashed #E8E8E8;
}

.discount-bottom {
  padding-top: 40rpx;
  padding-left: 40rpx;
  width: 100%;
  display: flex;
}

.discount-bottom .content {
  margin-left: 20rpx;
}

.discount-bottom .content:first-of-type {
  margin-left: 0;
}

.discount-bottom .content .v1 {
  width: 260rpx;
  height: 200rpx;
}

.discount-bottom .content .v2 {
  font-size: 26rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 20rpx;
}

.discount-bottom .content .v3 {
  margin-top: 10rpx;
  font-size: 18rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
.add-discount{
  width:366rpx;
  height:110rpx;
  background:linear-gradient(90deg,rgba(255,128,128,1) 0%,rgba(255,36,66,1) 100%);
  box-shadow:0px 2rpx 16rpx 0rpx rgba(255,96,121,0.4);
  border-radius:55rpx;
  position: fixed;
  bottom: 30rpx;
  left: 192rpx;
  font-size:32rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  line-height: 110rpx;
}