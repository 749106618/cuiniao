page {
  background: rgba(250, 250, 250, 1);
}

.main {
  width: 670rpx;
  margin: 40rpx 40rpx 60rpx 40rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
}

.main-item {
  height: 104rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}

.main-item .left {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.main-item .right {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: right;
}

.main-item .right1 {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
}

.main-item .right1 input {
  text-align: right;
}

.main-item .right .bottom {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 5rpx;
}

.submit {
  margin: 0 40rpx;
  width: 670rpx;
  height: 88rpx;
  background: linear-gradient(90deg, rgba(255, 128, 128, 1) 0%, rgba(255, 36, 66, 1) 100%);
  border-radius: 44rpx;
  opacity: 0.5;
  text-align: center;
  color: #fff;
  line-height: 88rpx;
}