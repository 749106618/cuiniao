page {
    background: rgba(250, 250, 250, 1);
}

.title {
    width: 322rpx;
    height: 40rpx;
    font-size: 40rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 40rpx;
    margin: 42rpx 0 0 40rpx;
}

.index-box {
    margin: 40rpx 40rpx 80rpx 40rpx;
    background-color: #fff;
}

.mary {
    padding: 40rpx;
    background-color: #FFFFFF;
    box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
    border-radius: 16rpx;

}

.portrait {
    width: 110rpx;
    height: 110rpx;
    background-color: #fff;
    border-radius: 50%
}

.portrait image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.summary {
    position: absolute;
    top: 0rpx;
    left: 140rpx;
    height: 32rpx;
    font-size: 32rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
    line-height: 32rpx;
}

.upper-half {
    width: 100%;
    height: 100%;
    position: relative;
}

.andy {
    position: absolute;
    top: 64rpx;
    left: 140rpx;
    width: 120rpx;
    height: 40rpx;
    background: linear-gradient(90deg, rgba(60, 65, 72, 1) 0%, rgba(112, 119, 127, 1) 100%);
    border-radius: 20rpx;
    font-size: 20rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 20rpx;
    text-align: center;
    line-height: 40rpx;
}

.relevant-information {
    width: 100%;
    margin-top: 40rpx;
    display: flex;
}

.relevant-daughter {
    width: 33.333%;
    text-align: center;
}

.relevant-daughter text {
    font-size: 36rpx;
    font-family: DIN;
    font-weight: bold;
    color: #333333;
    line-height: 32rpx;
}

.relevant-daughter .red-daughter {
    color: rgba(255, 36, 66, 1);
}

.relevant-daughter view {
    width: 100%;
    margin-top: 20rpx;
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 24rpx;
}

.functional-region {
    height: 100%;
    margin: 0rpx 40rpx 60rpx;
    display: flex;
    justify-content: flex-start;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
    border-radius: 40rpx;
}

.functional-region .active {
    width: 50%;
    height: 80rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC;
    font-weight: 600;
    color: #333333;
    line-height: 80rpx;
    border-right: 0;
    background-color: #fff;
}


.functional-region .active.red {
    background-color: #FF2442;
    box-shadow: 0px 6px 28px 0px rgba(0, 0, 0, 0.05);
    color: #fff;
}

.functional-region .active.green {
    background-color: rgba(76, 215, 98, 1);
    box-shadow: 0px 6px 28px 0px rgba(0, 0, 0, 0.05);
    color: #fff;
}

.all-funcition {
    display: flex;
    flex-wrap: wrap;
    height: 100%;
    text-align: center;
    margin: 0 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 24rpx;
}

.partial {
    width: 33.333%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    justify-items: auto;
    margin-bottom: 60rpx;
}

.partial .sm {
    margin-top: 30rpx;
}

.partial-function {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    text-align: center;
    background-color: #FFFFFF;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
}

.partial {
    width: 33.333%;
    height: 180rpx;
}

.partial-function image {
    width: 56rpx;
    height: 56rpx;
}