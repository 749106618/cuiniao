<view class="title">Hi，翠鸟会员商家</view>
<view class="index-box">
    <view class="mary">
        <view class="upper-half">
            <view class="portrait">
                <image class=".hader-portrait" src="{{headImgUrl}}" />
            </view>
            <view>
                <text class="summary">{{nickName}}</text>
                <text class="andy">翠鸟商家</text>
            </view>
        </view>
        <view class="relevant-information">
            <view class="relevant-daughter">
                <text class="red-daughter">{{statisticData.totalAmount}}</text>
                <view>今日收入(￥)</view>
            </view>
            <view class="relevant-daughter">
                <text>{{statisticData.orderNum}}</text>
                <view>今日订单</view>
            </view>
            <view class="relevant-daughter">
                <text>{{statisticData.guestNum}}</text>
                <view>今日客户</view>
            </view>
        </view>
    </view>
</view>
