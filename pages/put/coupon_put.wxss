/* pages/put/put.wxss */

.card {
  margin: 40rpx 0;
  padding: 40rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
}

.center-left {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.center {
  height: 128rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.center .text {
  margin-right: 20rpx;
}

.ft24 {
  font-size: 24rpx;
}

.ft48 {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff2442;
  margin-right: 10rpx;
}

.red {
  color: #ff2442;
}

.bottom {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  border-top: 1px dashed #e8e8e8;
  padding-top: 40rpx;
}

.card-point {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.point {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: #999;
  margin-right: 5px;
}

.bottom image {
  width: 80rpx;
  height: 80rpx;
  background: rgba(67, 137, 68, 1);
  border-radius: 16rpx;
  margin-right: 12rpx;
}

.bottom text {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.add_put {
  width: 366rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  vertical-align: center;
  background: linear-gradient(90deg, rgba(255, 128, 128, 1) 0%, rgba(255, 36, 66, 1) 100%);
  box-shadow: 0px 2rpx 16rpx 0rpx rgba(255, 96, 121, 0.4);
  border-radius: 55rpx;
  position: fixed;
  left: 50%;
  margin-left: -183rpx;
  bottom: 30rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
}

.blank {
  width: 100%;
  height: 30rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  font-family: PingFangSC;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0 60rpx 0;
}

.number {
  font-size: 24rpx;
  color: #ff2442;
  padding: 8rpx 14rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 36, 66, 1);
}

.row {
  margin-bottom: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333;
  font-size: 28rpx;
}

.row .left {
  display: flex;
}

.row image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.time {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.status {
  color: #999;
}

.colorLight {
  color: #333;
}
