/* pages/put/put.wxss */

.swiper-tab {
  width: 100%;
}

.swiper-tab-item {
  font-size: 32rpx;
  margin-bottom: 18rpx;
  margin-right: 50rpx;
  font-family: PingFangSC;
  font-weight: 700;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  position: relative;
  display: inline-block;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.active:after {
  content: '';
  position: absolute;
  left: 18rpx;
  top: 50rpx;
  bottom: 0;
  right: auto;
  height: 6rpx;
  width: 60rpx;
  background: linear-gradient(90deg, rgba(255, 138, 123, 1) 0%, rgba(255, 36, 66, 1) 100%);
}

.card {
  margin: 40rpx 0;
  padding: 40rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 28rpx 0rpx rgba(0, 0, 0, 0.05);
}

.top {
  display: flex;
  border-bottom: 1px dashed #e8e8e8;
  padding-bottom: 40rpx;
}

.top image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.shop {
  width: 85%;
  margin-left: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop .shop-name {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 700;
  color: rgba(51, 51, 51, 1);
}

.shop .shop-address {
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
}

.center-left {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;

}

.center {
  height: 128rpx;
  margin: 40rpx 0;
  background: rgba(245, 245, 245, 1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.center image {
  width: 90rpx;
  height: 72rpx;
  margin-right: 40rpx;
}

.price {
  vertical-align: bottom;
  margin-bottom: 3px;
}

.ft24 {
  font-size: 24rpx;
}

.ft48 {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff2442;
  margin-right: 10rpx;
}

.red {
  color: #ff2442;
}

.bottom {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.card-point {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}

.point {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: #999;
  margin-right: 5px;
}

.bottom image {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.add_put {
  width: 366rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  vertical-align: center;
  background: linear-gradient(90deg, rgba(255, 128, 128, 1) 0%, rgba(255, 36, 66, 1) 100%);
  box-shadow: 0px 2rpx 16rpx 0rpx rgba(255, 96, 121, 0.4);
  border-radius: 55rpx;
  position: fixed;
  left: 50%;
  margin-left: -183rpx;
  bottom: 30rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
}
.blank{
  width: 100%;
  height: 30rpx;
}