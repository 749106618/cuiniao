/* pages/put/detail_put.wxss */

page {
  background-color: #fff !important;
  height: 100%;
}

.price {
  margin: 4rpx 0 120rpx 0;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  font-weight: 500;
}

.money {
  font-size: 56rpx;
  font-weight: 700;
  margin-top: 26rpx;
}

.detail {
  font-size: 28rpx;
  font-weight: 400;
}

.row {
  margin-bottom: 60rpx;
  display: flex;
  justify-content: space-between;
}

.name {
  color: #999;
}

.row-value {
  color: #333;
}

.red {
  color: #ff2442;
}

.invalid {
  width: 670rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: #999;
  font-size: 32rpx;
  border: 1rpx solid rgba(221, 221, 221, 1);
  background-color: #fff;
  margin-bottom: 60rpx;
}
