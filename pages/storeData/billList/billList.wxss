page {
    background: rgba(250, 250, 250, 1);
}

.card {
    width           : 670rpx;
    height          : 100%;
    border-radius   : 16rpx;
    margin          : 40rpx 40rpx 64rpx;
    background-color: #fff;
}

.monthly {
    font-size  : 32rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color      : rgba(51, 51, 51, 1);
    line-height: 32rpx;
    padding    : 40rpx;
}

.month-income {
    margin-top: 10rpx;
    text-align: center;
}

.money {
    font-size  : 60rpx;
    font-family: DIN;
    font-weight: bold;
    color      : rgba(255, 36, 66, 1);
    line-height: 44rpx;
    text-align : center;
    margin-top : 28rpx;
}

.massage {
    display        : flex;
    justify-content: center;
    width          : 100%;
    text-align     : center;
}

.massage-a {
    margin-top: 60rpx;
    width     : 33.33%;
}

.massage-d {
    font-size  : 36rpx;
    font-family: DIN;
    font-weight: bold;
    color      : rgba(51, 51, 51, 1);
    line-height: 32rpx;
}

.massage-c {
    font-size  : 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color      : rgba(153, 153, 153, 1);
    margin-top : 20rpx;
}

.total {
    width          : 100%;
    height         : 80rpx;
    line-height    : 80rpx;
    margin-top     : 60rpx;
    border-radius  : 0 0 16rpx 16rpx;
    background     : rgba(248, 248, 248, 1);
    display        : flex;
    justify-content: space-around;
    font-size      : 24rpx;
    font-family    : PingFangSC;
    font-weight    : 400;
    color          : rgba(51, 51, 51, 1);
}

.total text {
    color: #333333;
}

.total view {
    font-size  : 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color      : rgba(153, 153, 153, 1);
}