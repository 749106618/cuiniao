page {
    background: rgba(250, 250, 250, 1);
}

.title {
    margin         : 0 40rpx;
    height         : 100rpx;
    display        : flex;
    align-items    : center;
    justify-content: space-between;
}

.left {
    width        : 114rpx;
    height       : 48rpx;
    text-align   : center;
    line-height  : 48rpx;
    float        : left;
    background   : rgba(255, 255, 255, 1);
    border-radius: 24rpx;
    font-size    : 24rpx;
    font-family  : PingFangSC;
    font-weight  : 500;
    color        : rgba(51, 51, 51, 1);
    line-height  : 48rpx;

}

.left image {
    width : 16rpx;
    height: 10rpx;
    vertical-align: middle;
    margin-left: 10rpx;
}

.right {
    float : right;
    height: 60rpx;
}

.order-form {
    float: right;
}

.income {
    float     : right;
    margin-top: 12rpx;
}

.right text {
    font-size  : 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color      : rgba(153, 153, 153, 1);
    line-height: 24rpx;
}

.detail {
    box-sizing: border-box;
    margin          : 20rpx 40rpx;
    background-color: pink;
    width           : 670rpx;
    height          : 648rpx;
    background      : rgba(255, 255, 255, 1);
    box-shadow      : 0px 6px 28px 0px rgba(0, 0, 0, 0.05);
    border-radius   : 16rpx;
}

.detail-content {
    padding: 40rpx 40rpx 30rpx;
    position: relative;
}

.detail-image {
    width        : 80rpx;
    height       : 80rpx;
    background   : rgba(67, 137, 68, 1);
    border-radius: 40rpx;
}

.detail-image image {
    width : 100%;
    height: 100%;
}

.detail-summary {
    position: absolute;
    top: 44rpx;
    left:132rpx;
    font-size  : 28rpx;
    font-family: PingFangSC;
    font-weight: 500;
    color      : rgba(51, 51, 51, 1);

}

.detail-text text {
    position: absolute;
    top: 91rpx;
    left:132rpx;
    font-size  : 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color      : rgba(153, 153, 153, 1);
}

.price text {
    position: absolute;
    top: 62rpx;
    right:40rpx;
    margin: auto 0;
    font-size  : 36rpx;
    font-family: PingFangSC;
    font-weight: 600;
    color      : rgba(51, 51, 51, 1);
}